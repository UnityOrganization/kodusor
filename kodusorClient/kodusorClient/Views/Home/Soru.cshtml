@model kodusorClient.ViewModel.KullaniciModel
@{
    ViewBag.Title = "Soru";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@*soru bilgileri*@
<h4>Başlık - @Model.Soru.Baslik</h4><br />
<p>İçerik - @Model.Soru.Icerik</p><br />
<span>@Model.Soru.Tarih</span><br />
<span>@Model.Soru.Kullanici.Adi</span><br />
<span>@Model.Soru.BegeniSayisi</span><br /><br />

