    <span>@item.Kullanici.Adi @item.Kullanici.Soyadi</span><br />
    <span>@item.BegeniSayisi</span><br /><br />


    foreach (var yorum in item.YorumListesi)
    {
        <h1>yorumlar</h1><br />
